FROM node:12-alpine
WORKDIR /usr/app
COPY package*.json ./
RUN npm ci --only=production
COPY ./dist/src ./src
ENV NODE_ENV production
ENV PORT 8080
ENV AUTH_SERVICE_URL redis.chat-app.svc.cluster.local
ENV DB_URL mongoose://mongodb.chat-app.svc.cluster.local:27017/ChatServer
ENV REDIS_HOST 
ENV REDIS_PORT 6379
EXPOSE $PORT
CMD ["node", "src/app.js"]